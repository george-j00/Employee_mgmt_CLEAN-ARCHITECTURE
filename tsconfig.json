{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"], // Adjust this path based on your project structure
  "exclude": ["node_modules", "./dist"]
}
